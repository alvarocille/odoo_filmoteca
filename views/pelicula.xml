<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="vista_filmotecaalvaro_pelicula_tree">
            <field name="name">vista_filmotecaalvaro_pelicula_tree</field>
            <field name="model">filmotecaalvaro.pelicula</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="film_date"/>
                    <field name="description"/>
                    <field name="genero_id"/>
                    <button name="f_create" string="Crear" class="oe_highlight" type="object"/>
                    <button name="f_delete" string="Eliminar" class="oe_highlight" type="object"/>
                </tree>
            </field>
        </record>

        <!-- form -->
        <record model="ir.ui.view" id="vista_filmotecaalvaro_pelicula_form">
            <field name="name">vista_filmotecaalvaro_pelicula_form</field>
            <field name="model">filmotecaalvaro.pelicula</field>
            <field name="arch" type="xml">
                <form string="formulario_pelicula">
                    <sheet>
                        <div class="oe_button:box" name="button_box">
                            <button name="toggle_color" type="object" class="oe_stat_button"
                                    string="Color película" icon="fa-paint-brush"/>
                        </div>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="code"/>
                                <field name="name"/>
                                <field name="film_date"/>
                                <field name="description"/>
                                <field name="genero_id"/>
                                <field name="tecnicas_id"/>
                            </group>

                            <group name="group_right">
                                <field name="image" widget="image"/>
                                <field name="language"/>
                                <field name="opinion"/>
                                <field name="color"/>
                            </group>
                        </group>

                        <group name="group_bottom">
                            <group name="group_left">
                                <button name="f_create" string="Crear" class="oe_highlight" type="object"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Kanban -->
        <record id="vista_filmotecaalvaro_pelicula_kanban" model="ir.ui.view">
            <field name="name">vista_filmotecaalvaro_pelicula_kanban</field>
            <field name="model">filmotecaalvaro.pelicula</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="film_date"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img alt="Cartel"
                                         t-att-src="kanban_image('filmotecaalvaro.pelicula', 'image', record.id.raw_value)"
                                    />
                                </div>
                                <div class="o_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div t-if="record.film_date.value">
                                        <t t-esc="record.film_date.value"/>
                                    </div>
                                </div>

                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="vista_filmotecaalvaro_pelicula_search">
            <field name="name">vista_filmotecaalvaro_pelicula_search</field>
            <field name="model">filmotecaalvaro.pelicula</field>
            <field name="arch" type="xml">
                <search string="Filtrar películas">
                    <field name="name"/>
                    <field name="language"/>
                    <field name="film_date"/>
                    <field name="color"/>
                    <group expand="0" string="Group By">
                        <filter name="groupby_language" string="Español" domain="[('language','=','es')]"
                                context="{'group_by':'language'}"
                                help="Agrupar por películas en español"/>
                        <filter name="groupby_film_date" string="Fecha"
                                context="{'group_by':'film_date'}"
                                help="Agrupar por fecha"/>
                    </group>
                    <filter name="filter_by_color" string="Color" domain="[('color','=','True')]"
                            help="Películas en color"/>
                </search>
            </field>
        </record>

        <!-- actions opening views on models -->
        <!--
            <record model="ir.actions.act_window" id="filmotecaalvaro.action_window">
              <field name="name">filmotecaalvaro window</field>
              <field name="res_model">filmotecaalvaro.filmotecaalvaro</field>
              <field name="view_mode">tree,form</field>
            </record>
        -->

        <!-- server action to the one above -->
        <!-- actions debe ir antes de su llamada -->
        <record model="ir.actions.act_window" id="accion_filmotecaalvaro_pelicula_form">
            <field name="name">Listado de películas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">filmotecaalvaro.pelicula</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Peliculas
                </p>
                <p>Click <strong>'Crear'</strong> para añadir nuevos elementos.
                </p>
            </field>
        </record>

        <!-- Menú raiz -->
        <menuitem name="Filmoteca alvaro" id="menu_filmotecaalvaro_raiz"/>

        <!-- Segundo nivel -->
        <menuitem name="Listado de películas" id="menu_filmotecaalvaro_listado_peliculas"
                  parent="menu_filmotecaalvaro_raiz"/>

        <!-- Tercer nivel con action -->
        <menuitem name="Consultar" id="menu_filmotecaalvaro_peliculas" parent="menu_filmotecaalvaro_listado_peliculas"
                  action="accion_filmotecaalvaro_pelicula_form"/>

    </data>
</odoo>